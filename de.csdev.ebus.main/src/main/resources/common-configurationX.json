    {
        "comment":  "<System Data> Date/Time of an eBUS Master",
        "filter":   "?? ?? 07 00 09 .*",
        "class":    "common",

        "values": {
            "temp_ouside": {"type": "data2b", "pos":6, "label": "Outside temperature (°C)"},
