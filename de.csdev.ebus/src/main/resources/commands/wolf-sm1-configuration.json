                    {"name": "x_yield_today_l", "type": "word"},
                    {"name": "x_yield_today_h", "type": "word"},
                    {"name": "x_yield_total_l", "type": "word"},
                    {"name": "x_yield_total_h", "type": "word"},
                    {"name": "x_yield_total_m", "type": "word"},
                    {"name": "unknown", "type": "word"}
                ]
            }
