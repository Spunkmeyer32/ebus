        {
            "comment":  "<Solar> Solar Broadcast 1",
            "device":   "Wolf CSZ-2 > SM1, FW: 10/2014",
            "id":       "solar.solar_data",
            "command":  "50 17",
    
            "broadcast": {
                "master": [
                    {"name": "_solar_status", "type": "byte", "label": "Solar status (Multiple bits)", "children": [
                        {"name": "state_pump", "type": "bit", "label": "Pump status"}
                    ]},
                    
                    {"name": "unknown1", "type": "data1b"},
                    {"name": "temp_collector", "type": "data2c", "label": "Temperature, collector 1 °C", "min":-20, "max":160, "format":"%.1f°C"},
                    {"name": "temp_cylinder", "type": "data2c", "label": "Temperature, solar cylinder 1 °C", "min":1, "max":100, "format":"%.1f°C"},

                    {"name": "xxx", "type": "word", "label": "Temperature, solar cylinder 2 °C"},
                    {"name": "temp_cylinder2", "type": "data2c", "label": "Temperature, solar cylinder 2 °C", "min":1, "max":100, "format":"%.1f°C"},
                    {"name": "temp_cylinder2a", "type": "data2c", "label": "Temperature, solar cylinder 2 °C", "min":1, "max":100, "format":"%.1f°C"},
                    {"name": "temp_cylinder3b", "type": "data2c", "label": "Temperature, solar cylinder 3 °C", "min":1, "max":100, "format":"%.1f°C"},
                    {"name": "temp_cylinder3", "type": "data2c", "label": "Temperature, solar cylinder 3 °C", "min":1, "max":100, "format":"%.1f°C"}
                ]
            }
        },
    
