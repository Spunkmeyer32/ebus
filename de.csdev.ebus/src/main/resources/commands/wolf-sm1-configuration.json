        {
            "comment":  "<Solar> Cylinder temperature (°C)",
            "device":   "Wolf CSZ-2 > SM1, FW: 10/2014",
            "id":       "solar.temp_cylinder",
            "command":  "50 22",
    
            "get": {
                "master": [
                    {"type": "kw-crc"},
                    {"type": "static", "default": "29 0A"}
                ],
                "slave": [
                    {"name": "temp_cylinder", "type": "word", "label": "Solar cylinder temperature (°C)", "factor": 0.1 , "min": 1, "max": 100, "format":"%.1f°C"}
                ]
            }
        },
        
        {
            "comment":  "<Solar> Return temperature (°C)",
            "device":   "Wolf CSZ-2 > SM1, FW: 10/2014",
            "id":       "solar.temp_return",
