            "get": {
                "master": [
                    {"type": "kw-crc"},
                    {"type": "static", "default": "FB 02"}
                ],
                "slave": [
                    {"name": "temp_return", "type": "word", "label": "Solar return temperature (°C)", "factor": 0.1 , "min": -30, "max": 150, "format":"%.1f°C"}
                ]
            }
