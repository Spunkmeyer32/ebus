[
    {
        "comment":  "<System Data> Inquiry of Existence",
        "id":       "common.inquiry_of_existence",
        "class":    "common",
        "command":  "07 FE",
        "dst":      "FE"
    },

    {
        "comment":  "<System Data> Inquiry of Existence",
        "id":       "common.sign_of_life",
        "class":    "common",
        "command":  "07 FF",
        "dst":      "FE"
    },
    
    {
        "comment":  "<General> Error Message",
        "id":       "common.error",
        "command":	"FE 01",
        "dst":		"FE",

		"get": {
			"master": [
				{"type": "string", "name":"error", "length": 10}
				
			]
		}
    },
    
    {
        "comment":  "<Burner Control> Operational Data of Burner Control unit to Room Control Unit - Block 1",
        "id":    "auto_stroker",
        "command":  "05 03",

        "get": {
            "master": [
                {"name":"block_number", "type": "static", "default": "01"},
                {"name":"status_auto_stroker", "type": "byte", "label": "Status indication"},
                { "name":"bits", "type": "byte", "children": [
                    {"name":"state_air_pressure", "type": "bit", "label": "Air pressure monitor"},
                    {"name":"state_gas_pressure", "type": "bit", "label": "Gas pressure monitor"},
                    {"name":"state_water_flow", "type": "bit", "label": "Water flow"},
                    {"name":"state_flame", "type": "bit", "label": "Flame"},
                    {"name":"state_valve1", "type": "bit", "label": "Valve1"},
                    {"name":"state_valve2", "type": "bit", "label": "Valve2"},
                    {"name":"state_pump", "type": "bit", "label": "State heating pump"},
                    {"name":"state_alarm", "type": "bit", "label": "Alarm"}
                ]},                
                {"name":"performance_burner", "type": "uchar", "label": "Setting degree between min. and max. boiler performance (%)","min":0.0, "max":100.0},
                {"name":"temp_boiler", "type": "data1c", "label": "Boiler temperature (째C)", "min":0, "max":100},
                {"name":"temp_return", "type": "uchar", "label": "Return temperature (째C)", "min":0, "max":100},
                {"name":"temp_dhw", "type": "uchar", "label": "DHW temperature (째C)", "min":0, "max":100},
                {"name":"temp_outside", "type": "char", "label": "Outside temperature (째C)", "min":-30, "max":50}
            ]
        }

    },

    {
        "comment":  "<Burner Control> Operational Data of Burner Control unit to Room Control Unit - Block 2",
        "class":    "auto_stroker",
        "command":  "05 03",

        "get": {
            "master": [
                {"name":"block_number", "type": "static", "default": "02"},
                {"name":"temp_exhaust", "type": "data2c", "label": "Exhaust temperatur", "min": 0, "max":600},
                {"name":"temp_bww_lead", "type": "data1c", "label": "..."},
                {"name":"performance_eff_boiler", "type": "data1c", "label": "..."},
                {"name":"temp_xxxx", "type": "data1c", "label": "..."},
                {"name":"_reserve", "type": "byte", "defaut": "255"}
            ]
        }

    }
]